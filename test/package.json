{
  "name": "menubartest",
  "bin": "index.js",
  "scripts": {
    "build": "pkg . --target macos --output dist/test-bin-macos && pakager",
    "compile": "pkg . --target macos --output dist/test-bin-macos",
    "pack": "pakager"
  },
  "license": "ISC",
  "pakager": {
    "name": "menubar-test",
    "version": "1.0.0",
    "author": "kasper.space",
    "realName": "Menubar Test",
    "appId": "com.example.menubar-test",
    "copyright": "Copyright Â© 2020 kasper.space",
    "outputDir": "dist",
    "backgroundApp": true,
    "mac": {
      "binary": "dist/test-bin-macos",
      "icon": "icon.png",
      "category": "public.app-category.utilities",
      "formats": [
        "app"
      ],
      "darkModeSupport": true,
      "customInfo": {
        "CFBundleDevelopmentRegion": "en"
      }
    }
  },
  "dependencies": {
    "systray": "^1.0.5"
  },
  "devDependencies": {
    "pakager": "file:..",
    "pkg": "^4.4.9"
  }
}
